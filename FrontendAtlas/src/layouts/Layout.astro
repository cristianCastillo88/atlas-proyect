---
import { Toaster } from '../components/ui/Toaster';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Atlas - Sistema de Gesti칩n de Restaurantes" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Atlas - Gesti칩n de Restaurantes</title>
    
    <!-- Google Fonts: Inter y Outfit -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Outfit:wght@400;500;600;700;800&display=swap" 
      rel="stylesheet" 
    />
    
    <style>
      /* Animaci칩n shimmer para skeletons */
      @keyframes shimmer {
        0% { background-position: -200% 0; }
        100% { background-position: 200% 0; }
      }
      
      /* Estilos base con variables CSS */
      :root {
        --color-primary: #22c55e;
        --color-primary-dark: #16a34a;
        --color-secondary: #64748b;
        --color-accent: #ef4444;
      }
      
      body {
        font-family: 'Inter', ui-sans-serif, system-ui, -apple-system, sans-serif;
      }
      
      h1, h2, h3, h4, h5, h6 {
        font-family: 'Outfit', 'Inter', sans-serif;
      }
      
      /* Clase helper para glassmorphism */
      .glass {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.2);
      }
      
      .glass-dark {
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
      }
    </style>
  </head>
  <body class="bg-gray-50 min-h-screen antialiased">
    <!-- Toaster para notificaciones -->
    <Toaster client:only="react" />
    
    <!-- Slot para renderizar el contenido de las p치ginas -->
    <slot />
  </body>
</html>