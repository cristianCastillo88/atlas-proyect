---
// Props del componente
export interface Props {
  nombre: string;
  descripcion: string;
  precio: number;
  urlImagen: string;
}

const { nombre, descripcion, precio, urlImagen } = Astro.props;

// Formatear precio como moneda ARS
const precioFormateado = new Intl.NumberFormat('es-AR', {
  style: 'currency',
  currency: 'ARS',
}).format(precio);
---

<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <!-- Imagen con aspect-ratio 4/3 y object-cover -->
  <div class="aspect-[4/3] overflow-hidden">
    <img
      src={urlImagen}
      alt={nombre}
      class="w-full h-full object-cover"
    />
  </div>
  <!-- Contenido de la tarjeta -->
  <div class="p-4">
    <h3 class="text-lg font-semibold text-gray-900 mb-2">{nombre}</h3>
    <p class="text-gray-600 text-sm mb-3">{descripcion}</p>
    <div class="flex justify-between items-center">
      <span class="text-xl font-bold text-green-600">{precioFormateado}</span>
      <!-- BotÃ³n Agregar destacado -->
      <button class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors duration-200 font-medium">
        Agregar
      </button>
    </div>
  </div>
</div>